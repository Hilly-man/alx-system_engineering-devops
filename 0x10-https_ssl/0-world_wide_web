#!/usr/bin/env bash

# Define subdomains and their respective IP addresses
declare -A subdomains
subdomains["www"]="lb-01-IP"
subdomains["lb-01"]="lb-01-IP"
subdomains["web-01"]="web-01-IP"
subdomains["web-02"]="web-02-IP"

# Function to display information about a specific subdomain
show_subdomain_info() {
    local subdomain="$1"
    local ip="${subdomains[$subdomain]}"
    echo "The subdomain $subdomain is an A record and points to $ip"
}

# Main script
if [ "$#" -lt 1 ]; then
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi

subdomain="$2"

if [ -z "$subdomain" ]; then
    # Display information for all subdomains
    for sub in "${!subdomains[@]}"; do
        show_subdomain_info "$sub"
    done
else
    # Display information for the specified subdomain
    if [ -n "${subdomains[$subdomain]}" ]; then
        show_subdomain_info "$subdomain"
    else
        echo "Subdomain not found or not configured."
    fi
fi
